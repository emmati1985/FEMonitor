		<filterItems>
			<ViewSettingsFilterItem id="filterItems" text="{i18n>masterFilterName}" key="Status" multiSelect="false">
				<items>
					<ViewSettingsItem text="{i18n>Status1}" key="S1" id="viewFilter1"/>
					<ViewSettingsItem text="{i18n>Status2}" key="S2" id="viewFilter2"/>
					<ViewSettingsItem text="{i18n>Status3}" key="S3" id="viewFilter3"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>